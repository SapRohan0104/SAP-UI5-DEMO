<mvc:View
    controllerName="com.app.demoui5.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
>
    <!-- We use some bitwise/Ternary operator  a ? b : c -->
    <!-- {= ${field} === 40 ? true : false } -->
    <!-- {= ${Expression} || ${Expression} || ${Expression}   }  -->
    <!-- {= ${Expression} &amp;&amp; ${Expression} &amp;&amp; ${Expression}   }  -->

    <l:VerticalLayout id="idVerticalLayout" binding="{/person}">
        <Input value="{EmployeeName}"></Input>
        <Input value="{EmployeeAge}"></Input>
        <Input value="{ContractStarted}"></Input>
        <Input value="{Email}"></Input>
        <Button text="Submit" press="onSubmitData"/>
    </l:VerticalLayout>
</mvc:View>
